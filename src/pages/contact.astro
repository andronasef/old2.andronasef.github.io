---
import Layout from "../layouts/Layout.astro";
import SocialLinks from "../components/common/SocialLinks";
import Container from "../components/common/Container";
import ContactForm from "../components/pages/contact/ContactForm";
---

<Layout title="Contact Me">
  <Container className="py-10">
    <div class="flex flex-col items-center gap-2">
      <div class="w-40 h-40 mb-5">
        <img
          class="overflow-hidden border-2 rounded-full"
          src="/me.webp"
          alt="me"
        />
      </div>
      <h2 class="text-3xl font-bold">Andrew Nasef</h2>
      <p class="-mt-1 text-base font-semibold">
        Fullstack Freelancer Developer
      </p>
      <SocialLinks />
    </div>
    <div class="flex flex-col gap-2">
      <div class="text-center md:text-left">
        <p class="text-xl font-semibold md:text-2xl">
          NEED A FULL STACK <br class="md:hidden" /> WEB DEVELOPER?
        </p>
        <p>
          I'm ready to hear about your project. Don't hesitate to get in touch
          with me using the contact form.
        </p>
      </div>
      <div class="px-2 overflow-hidden">
        <ContactForm client:load />
      </div>
    </div>
  </Container>
</Layout>
