---
import Layout from "../layouts/Layout.astro";
import SocialLinks from "../components/common/SocialLinks";
import Container from "../components/common/Container";
import ContactForm from "../components/pages/contact/ContactForm";
import type load from "astro-icon/lib/utils";
---

<Layout title="Contact Me">
  <Container className="py-10">
    <div class="flex flex-col items-center gap-2">
      <div
        class="relative w-40 h-40 mb-5 overflow-hidden border-4 border-white rounded-full aspect-square"
      >
        <img class="border-0" src="/me.webp" alt="me" />
      </div>
      <h2 class="text-3xl font-bold">Andrew Nasef</h2>
      <p class="-mt-1 text-base font-semibold">
        Fullstack Freelancer Developer
      </p>
      <SocialLinks />
    </div>
    <div class="flex flex-col gap-2">
      <div>
        <p class="text-xl md:text-2xl">NEED A FULL STACK WEB DEVELOPER?</p>
        <p>
          I'm ready to hear about your project. Don't hesitate to get in touch
          with me using the contact form.
        </p>
      </div>
      <ContactForm client:load />
    </div>
  </Container>
</Layout>
